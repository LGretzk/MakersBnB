        <% @properties.each do |property| %>
          <div class='property_tile'>
            <div class='image_container'>
              <a href='properties/<%= property.id %>'><img src="<%= property.picture_url%>"/></a>
            </div>
            <div class='text_container'>
              <h2><%= property.description%></h2>
